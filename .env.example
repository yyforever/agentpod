# AgentPod environment variables
# Format:
# - [required] must be provided for production/runtime correctness
# - [optional] has a safe default shown below

# [required] PostgreSQL connection string for control-plane and core services.
# Default: none
DATABASE_URL=postgresql://agentpod:agentpod@localhost:5432/agentpod

# [optional] API key used by control-plane auth middleware and dashboard API proxy.
# Default: empty (auth disabled in development)
AGENTPOD_API_KEY=

# [optional] 32-byte (or stronger) secret used to encrypt pod gateway tokens at rest.
# Default: empty (encryption disabled)
AGENTPOD_ENCRYPTION_KEY=

# [optional] Base directory for pod data volumes.
# Default: /data/pods
AGENTPOD_DATA_DIR=/data/pods

# [optional] Docker network name used for pod containers.
# Default: agentpod-net
AGENTPOD_NETWORK=agentpod-net

# [optional] Root domain used for generated pod subdomains.
# Default: localhost
AGENTPOD_DOMAIN=localhost

# [optional] Default OpenClaw image used by adapter.
# Default: openclaw:production
AGENTPOD_OPENCLAW_IMAGE=openclaw:production

# [required] NextAuth secret used to sign/encrypt session tokens.
# Default: none (must be set in production)
NEXTAUTH_SECRET=change-me

# [required] Public URL for dashboard auth callbacks.
# Default: http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# [required] Dashboard admin password (credentials auth).
# Default: none
ADMIN_PASSWORD=change-me

# [optional] Dashboard -> control-plane base URL.
# Default: http://localhost:4000
CONTROL_PLANE_URL=http://localhost:4000

# [required] Dashboard admin username (used with ADMIN_PASSWORD).
# Default: none
ADMIN_USERNAME=admin

# [optional] Service port override (control-plane: 4000, dashboard: 3000).
# Default: unset
PORT=
